<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:scaleType="fitCenter"
        android:orientation="vertical">

        <include
            android:id="@+id/dateHeader"
            layout="@layout/date_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/myImageView"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/burning_wheel"
                android:layout_gravity="center"
                android:layout_marginEnd="50dp"/>

            <TextView
                android:id="@+id/myTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Witaj"
                android:textSize="50sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginEnd="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/carRepairShop"
                android:layout_width="185dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_edittext"
                android:text="Dodaj wydatek na utrzymanie warsztatu"
                android:textColor="@color/red"
                android:textSize="20dp" />

            <Button
                android:id="@+id/viewCarRepairShop"
                android:layout_width="185dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_edittext"
                android:text="Podgląd na wydatki"
                android:textColor="@color/red"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/employeeSalary"
                android:layout_width="185dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_edittext"
                android:text="Dodaj pensje"
                android:textColor="@color/red"
                android:textSize="20dp" />

            <Button
                android:id="@+id/viewEmployeeSalary"
                android:layout_width="185dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_edittext"
                android:text="Podgląd Pensji"
                android:textColor="@color/red"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/orders"
                android:layout_width="185dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_edittext"
                android:text="Utwórz zlecenie"
                android:textColor="@color/red"
                android:textSize="20dp" />

            <Button
                android:id="@+id/viewOrders"
                android:layout_width="185dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_edittext"
                android:text="Podgląd zlecenia"
                android:textColor="@color/red"
                android:textSize="20dp" />
        </LinearLayout>

        <Button
            android:id="@+id/overallProfit"
            android:layout_width="360dp"
            android:layout_height="75dp"
            android:background="@drawable/rounded_edittext"
            android:layout_gravity="center"
            android:text="Zysk ogólny"
            android:textSize="23dp"
            android:textColor="@color/green"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            />

        <Button
            android:id="@+id/history"
            android:layout_width="360dp"
            android:layout_height="75dp"
            android:background="@drawable/rounded_edittext"
            android:layout_gravity="center"
            android:text="Historia"
            android:textSize="23dp"
            android:textColor="@color/gray"
            android:layout_marginBottom="30dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/delete"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:background="@drawable/rounded_edittext"
                android:layout_gravity="center"
                android:text="usuń konto"
                android:textSize="23dp"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/logout"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_edittext"
                android:layout_gravity="center"
                android:text="wyloguj"
                android:textSize="23dp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>