<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:scaleType="fitCenter"
        android:orientation="vertical">

        <include
            android:id="@+id/dateHeader"
            layout="@layout/date_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/myImageView"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/burning_wheel"
                android:layout_gravity="center"
                android:layout_marginEnd="50dp"/>

            <TextView
                android:id="@+id/myTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Witaj"
                android:textSize="50sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginEnd="40dp"/>
        </LinearLayout>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/carRepairShop"
            android:layout_width="360dp"
            android:layout_height="75dp"
            android:background="@drawable/rounded_edittext"
            android:layout_gravity="center"
            android:text="Wydatki na utrzymanie warsztatu"
            android:textSize="23dp"
            android:textColor="@color/red"
            />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/employeeSalary"
            android:layout_width="360dp"
            android:layout_height="75dp"
            android:background="@drawable/rounded_edittext"
            android:layout_gravity="center"
            android:text="Pensje pracowników"
            android:textSize="23dp"
            android:textColor="@color/red"
            />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/orders"
            android:layout_width="360dp"
            android:layout_height="75dp"
            android:background="@drawable/rounded_edittext"
            android:layout_gravity="center"
            android:text="zlecenia"
            android:textSize="23dp"
            android:textColor="@color/red"
            android:layout_marginBottom="30dp"
            />

        <Button
            android:id="@+id/overallProfit"
            android:layout_width="360dp"
            android:layout_height="75dp"
            android:background="@drawable/rounded_edittext"
            android:layout_gravity="center"
            android:text="Zysk ogólny"
            android:textSize="23dp"
            android:textColor="@color/green"
            android:layout_marginBottom="30dp"
            />

        <Button
            android:id="@+id/history"
            android:layout_width="360dp"
            android:layout_height="75dp"
            android:background="@drawable/rounded_edittext"
            android:layout_gravity="center"
            android:text="Historia"
            android:textSize="23dp"
            android:textColor="@color/gray"
            android:layout_marginBottom="30dp"
            />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/delete"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:background="@drawable/rounded_edittext"
                android:layout_gravity="center"
                android:text="usuń konto"
                android:textSize="23dp"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/logout"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_edittext"
                android:layout_gravity="center"
                android:text="wyloguj"
                android:textSize="23dp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>