<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:scaleType="fitCenter"
        android:orientation="vertical">

        <include
            android:id="@+id/dateHeader"
            layout="@layout/date_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/burning_wheel" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameEmployee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ImiÄ™ i nazwisko:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/nameEmployeeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:hint="Jan Kowalski"
                android:textColorHint="@color/gray"
                android:textSize="30sp"
                android:paddingLeft="20px"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/salaryEmployee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pensja:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/salaryEmployeeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:hint="0 PLN"
                android:textColorHint="@color/gray"
                android:textSize="30sp"
                android:paddingLeft="20px"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/bonus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Premia:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/bonusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:hint="0 PLN"
                android:textColorHint="@color/gray"
                android:textSize="30sp"
                android:paddingLeft="20px"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/salaryAdition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dodatek do pensji:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/salaryAditionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:hint="0 PLN"
                android:textColorHint="@color/gray"
                android:textSize="30sp"
                android:paddingLeft="20px"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="2dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_edittext"
                    android:text="Cofnij"
                    android:textSize="23dp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_edittext"
                    android:text="zapisz"
                    android:textSize="23dp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>